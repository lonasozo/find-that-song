                <%- body %>
            </main>
            
            <footer>
                <div class="container">
                    <p>&copy; <%= new Date().getFullYear() %> Find That Song</p>
                </div>
            </footer>
        </div>
    </div>

    <script src="/js/app.js"></script>
    <script src="/js/theme.js"></script>
</body>
</html>
